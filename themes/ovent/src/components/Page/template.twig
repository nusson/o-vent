{% extends "components/Interface/template.twig" %}

{% block content %}
  <article>

    {% block header %}
      <header class="header -illustrated" style="{{styles}}">
        <div class="content">
          <h1 class="title">{{post.title}}</h1>
        </div>
      </header>
    {% endblock header %}

    {% block page_content %}
      <div class="content">
        {{ post.content }}
      </header>
    {% endblock page_content %}

  </article>
{% endblock %}
