[data-cpt="Interface"]
  height 100%

  > .header
    fixed 0 0 false 0
    z-index z-header

  >.main
    position relative
    width 100%
    min-height calc('100% - '+h-footer)
    margin-left w-menu
    display flex
    >.page
      flex 1 1 100%
    // padding safe-padding

  > .footer
    position relative
    // height h-footer
    z-index z-footer

  &.-device-mobile
    >.main
      width 100%
      margin-left 0
