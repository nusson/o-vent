md-big = 1000px
md-med = 600px
h-header = 400px

[data-cpt="Shops"]


  /* [_LAY_] Layout*/
  .list
    position relative
    z-index 2
    height 100%

  /* [_STY_] Style*/
  .list
    background-color c-background

    > .item
      box-sizing border-box
      padding safe-padding
      .no-touch &
        cursor pointer
        transition background-color t-speed-light t-ease-out
        &:hover
          background-color c-white
          transition background-color t-speed-light t-ease-in

  article.-card
    p
      padding 0

    .fa,
    .text
      vertical-align top
      display inline-block

    .title
      font-size fz-highlight
      font-weight bold
      margin-bottom .5em

    .email
    .web
    .direction
      display none


