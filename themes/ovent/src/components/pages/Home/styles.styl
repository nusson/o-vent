/**
 * Homepage style
 *
 * ---
 * [_LAY_] Layout
 */

[data-cpt="Home"]
  width 100%
  display flex
  flex-direction column
  justify-content space-between

  .swiper-container
    width 100%
    height 60%
    position relative
  .swiper-button-next,
  .swiper-button-prev
    background none
    i
      absolute 50% false false
      transform: translateY(-50%)
  .swiper-button-next i
    right: 0

  .background
    background-size cover
    background-position center 30%


  .section
    width 100%

    &-fixed
      height: 100vh;
      overflow: hidden;
      > div
        width 100%
        height: 200%;
        position: relative;
        top: -120%;


    .btn-arrow
      background none
      border none
      padding: .5em
      font-size fz-big
      font-weight fw-light
      cursor pointer
      display inline-block
      color rgba(c-black, .4)
      i:before
        text-shadow: 1px 4px 0px white;
        transition all t-speed-light easing('in-out-back')
      .no-touch &
        transition all t-speed-light easing('in-out-back')
        &:hover
          transform: translateY(.3em) scale(.8)
          i:before
            text-shadow: -2px -4px 0px white;
      &.swiper-button-prev
        .no-touch &:hover
            transform: translateX(-.2em) scale(.8)
      &.swiper-button-next
        .no-touch &:hover
            transform: translateX(.2em) scale(.8)

    &-main
      height 100vh
      .background img
        height: 50%
      .footer
        absolute 88vh false false 50%
        transform: translateX(-50%)
      .-device-mobile &
        height 250px
        .footer
          bottom 0

    &-content
      width 100%
      height: auto
      padding: 4em 2%
      font-size fz-highlight
      line-height lh-text
      position relative
      z-index: 2
      background-color c-background
      text-align center
      >.content,
      >.footer
        width 100%
        max-width w-max
        margin: 0 auto
        position relative
      >.footer
        max-width: 700px
      p+p
        margin-top 1em
      .actions
        margin-top 2em
        text-align center
        display flex
        justify-content space-between
        align-item center
        z-index 2
        .button
          width 45%
          max-width 400px
          line-height lh-text
      .-device-mobile &
        padding: 40px 20px
        font-size fz-medium
        .actions
          flex-direction column
          align-items stretch
          .button
            width 80%
            margin: 0 auto
            &:not(:first-child)
              margin-top: 2em

    &-second
      position relative
      img
        object-position: center 80%


  .header
    position relative
    z-index 2
    display flex
    flex-direction column
    align-items center
    justify-content center
    height 100%
    text-align center
    color c-black
    font-size fz-big
    line-height lh-text
    h1, h2
      width 100%
      padding 0 safe-padding
      display block
    h1
      font-size fz-title
      line-height lh-text

    .-device-mobile &
      font-size fz-highlight
      h1
        font-size fz-big
        line-height lh-text



pre
  position relative
  z-index: 1000
  padding: 1em
  background-color #fff
