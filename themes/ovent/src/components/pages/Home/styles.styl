/**
 * Homepage style
 *
 * ---
 * [_LAY_] Layout
 */

[data-cpt="Home"]
  display flex
  flex-direction column
  justify-content space-between

  .header .background,
  .slideshows
    fixed 0 0 h-footer w-menu
    .-device-mobile &
      left 0

  .background
    background-size cover
    background-position center 30%

  .slideshow
    display none


  .header
    flex-grow 1
    display flex // to keep height

    .background
      width 100%
      height 100%

    .content
      display flex
      flex-direction column
      justify-content space-around
      position relative
      width 100%
      padding 2em
      z-index 2
      .text
        text-align center
        color c-white
        text-shadow:  -1px -1px 0 c-grey,
                      1px -1px 0 c-grey,
                      -1px 1px 0 c-grey,
                      1px 1px 0 c-grey;
        font-size fz-big
        line-height lh-text
        h1
          font-size fz-title
          line-height lh-text

        .-device-mobile &
          font-size fz-highlight
          h1
            font-size fz-big
            line-height lh-text

  .actions
    height 100px
    text-align center
    display flex
    justify-content space-around
    align-item center
    z-index 2

    button
      width 40%
      max-width 400px
      height 80px


button
  background none
  border none
  color c-grey
  text-transform uppercase
  letter-spacing 0
  line-height lh-text
  cursor pointer
  position relative
  transition all .3s cubic-bezier(0.75, 0, 0.125, 1)
	-webkit-backface-visibility hidden
	-moz-osx-font-smoothing grayscale

button
  &:before,
  &:after
    absolute 0 null null 0
    size 100%
    content ''
    z-index -1
    pointer-events none
    transition transform .3s, opacity 0.3s
    transition-timing-function cubic-bezier(0.75, 0, 0.125, 1)
    transform scale3d(1.1, 1.1, 1)
    -webkit-backface-visibility hidden

  &:before
    opacity 0
    z-index -1
    border 2px solid c-white

  &:after
    background-color c-white

  .no-touch &:hover
    color white
    letter-spacing .2em
    &:before
      opacity 1
      transform scale3d(1, 1, 1)
    &:after
      opacity 0
      transform scale3d(0.8, 0.8, 1)

